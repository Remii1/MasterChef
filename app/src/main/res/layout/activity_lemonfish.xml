<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:background="@drawable/fin"
android:layout_height="match_parent"
tools:context=".lemonfish">
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:text="Ingredients needed"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#3F51B5"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 firm white fish fillets"
        android:textSize="20dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="119dp" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 TB melted butter"
        android:textSize="20dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="119dp" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juice and zest from 1 medium lemon"
        android:textSize="20dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="119dp" />

    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="½ tsp kosher salt, plus extra to taste"
        android:textSize="20dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="119dp" />

    <CheckBox
        android:id="@+id/checkBox6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 tsp paprika "
        android:textSize="20dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="119dp" />

    <CheckBox
        android:id="@+id/checkBox7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 tsp garlic powder"
        android:textSize="20dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="119dp" />

    <CheckBox
        android:id="@+id/checkBox8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 tsp onion powder"
        android:textSize="20dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="119dp" />

    <CheckBox
        android:id="@+id/checkBox9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¼ tsp freshly ground black pepper"
        android:textSize="20dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="119dp" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Steps"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#3F51B5"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:text="1.Use paper towels to thoroughly pat-dry excess moisture from fish fillets."
        android:textStyle="italic"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textStyle="italic"
        android:text="2.In a bowl, combine melted butter, lemon juice and zest, and 1/2 tsp kosher salt. Stir to combine well"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textStyle="italic"
        android:text="3.In a bowl, combine melted butter, lemon juice and zest, and 1/2 tsp kosher salt. Stir to combine well"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textStyle="italic"
        android:text="4.In a large, heavy pan over medium high heat, heat up the olive oil until hot. Once your oil is sizzling,  Cook 2 fish fillets at a time to avoid overcrowding (allows for even browning). Cook each side just until fish becomes opaque, feels somewhat firm in the center, and is browned, about 2-3 minutes per side"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textStyle="italic"
        android:text="5.Lightly drizzle some of the lemon butter sauce as you cook, reserving the rest for serving. Take care not to over-cook, as that will result in a tougher texture. Season with extra kosher salt and freshly ground black pepper to taste."
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textStyle="italic"
        android:text="Serve fish with with remaining lemon butter sauce, basil or parsley, and lemon wedges."
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"/>


</LinearLayout>

</ScrollView>

