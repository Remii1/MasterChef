<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/fin"
        android:layout_height="match_parent"
        tools:context=".beefburger">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:text="Ingredients needed"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="#3F51B5"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â½ tbsp olive oil"
                android:textSize="20dp"
                android:textStyle="italic"
                tools:layout_editor_absoluteX="113dp"
                tools:layout_editor_absoluteY="119dp" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 onion, peeled and finely chopped"
                android:textSize="20dp"
                android:textStyle="italic"
                tools:layout_editor_absoluteX="113dp"
                tools:layout_editor_absoluteY="119dp" />

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 x 500g pack British Beef Steak Mince 15% fat"
                android:textSize="20dp"
                android:textStyle="italic"
                tools:layout_editor_absoluteX="113dp"
                tools:layout_editor_absoluteY="119dp" />

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 tsp mixed dried herbs"
                android:textSize="20dp"
                android:textStyle="italic"
                tools:layout_editor_absoluteX="113dp"
                tools:layout_editor_absoluteY="119dp" />

            <CheckBox
                android:id="@+id/checkBox6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 1 tsp mixed dried herbs"
                android:textSize="20dp"
                android:textStyle="italic"
                tools:layout_editor_absoluteX="113dp"
                tools:layout_editor_absoluteY="119dp" />

            <CheckBox
                android:id="@+id/checkBox7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 white rolls"
                android:textSize="20dp"
                android:textStyle="italic"
                tools:layout_editor_absoluteX="113dp"
                tools:layout_editor_absoluteY="119dp" />

            <CheckBox
                android:id="@+id/checkBox8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="few round lettuce leaves, torn"
                android:textSize="20dp"
                android:textStyle="italic"
                tools:layout_editor_absoluteX="113dp"
                tools:layout_editor_absoluteY="119dp" />

            <CheckBox
                android:id="@+id/checkBox9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 beef tomato, sliced"
                android:textSize="20dp"
                android:textStyle="italic"
                tools:layout_editor_absoluteX="113dp"
                tools:layout_editor_absoluteY="119dp" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Steps"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="#3F51B5"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:text="1.Heat the olive oil in a frying pan, add the onion and cook for 5 minutes until softened and starting to turn golden. Set aside."
                android:textStyle="italic"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:text="2.In a bowl, combine the beef mince with the herbs and the egg. Season, add the onions and mix well. Using your hands, shape into 4 patties."
                android:textStyle="italic"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:text="3.Cook the burgers on a preheated barbecue or griddle for 5-6 minutes on each side. While the second side is cooking, lay a slice of cheese on top to melt slightly (if using)."
                android:textStyle="italic"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:text="4.Meanwhile, lightly toast the cut-sides of the buns on the barbecue. Fill with the lettuce, burgers and tomato slices. Serve with ketchup, if you like."
                android:textStyle="italic"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

